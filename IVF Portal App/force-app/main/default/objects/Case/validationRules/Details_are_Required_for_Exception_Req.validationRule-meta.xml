<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Details_are_Required_for_Exception_Req</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
NOT(ISNEW()),
ISPICKVAL(ExceptionRequest__c, &quot;Yes&quot;),
ISBLANK(Details__c)
)</errorConditionFormula>
    <errorMessage>Please fill out the details under the Exception Request section.</errorMessage>
</ValidationRule>
